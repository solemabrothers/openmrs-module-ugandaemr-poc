        <comment>Setting Specimen source concept uuid</comment>
        <sql>
            UPDATE global_property SET property_value = '162476AAAAAAAAAAAAAAAAAAAAAAAAAAAAAA' WHERE property='order.testSpecimenSourcesConceptUuid';
